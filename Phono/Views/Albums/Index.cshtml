@model List<Phono.Models.Album>

@{
    ViewData["Title"] = "Albums";
}

<div class="entity-page">
    <div class="entity-header">
        <div class="header-content">
            <h1 class="entity-title">
                <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <circle cx="12" cy="12" r="10"></circle>
                    <circle cx="12" cy="12" r="3"></circle>
                </svg>
                Albums
            </h1>
            <span class="entity-count">@Model.Count album@(Model.Count != 1 ? "s" : "")</span>
        </div>
        <a asp-action="Create" class="btn btn-primary">
            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <line x1="12" y1="5" x2="12" y2="19"/>
                <line x1="5" y1="12" x2="19" y2="12"/>
            </svg>
            New Album
        </a>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">
            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <polyline points="20 6 9 17 4 12"/>
            </svg>
            @TempData["SuccessMessage"]
        </div>
    }

    @if (!Model.Any())
    {
        <div class="empty-state">
            <div class="empty-icon">
                <svg xmlns="http://www.w3.org/2000/svg" width="80" height="80" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1" stroke-linecap="round" stroke-linejoin="round">
                    <circle cx="12" cy="12" r="10"></circle>
                    <circle cx="12" cy="12" r="3"></circle>
                </svg>
            </div>
            <h3 class="empty-title">No albums yet</h3>
            <p class="empty-subtitle">Create your first album to organize your tracks</p>
            <a asp-action="Create" class="btn btn-primary" style="margin-top: var(--space-lg);">Create Album</a>
        </div>
    }
    else
    {
        <div class="entity-grid">
            @foreach (var album in Model)
            {
                <div class="entity-card">
                    <a asp-action="Details" asp-route-id="@album.Id" class="entity-card-link">
                        <div class="entity-artwork">
                            @if (!string.IsNullOrEmpty(album.AlbumArtBase64))
                            {
                                <img src="@album.AlbumArtBase64" alt="@album.Name" class="artwork-image" />
                            }
                            else
                            {
                                <div class="artwork-placeholder">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                                        <circle cx="12" cy="12" r="10"></circle>
                                        <circle cx="12" cy="12" r="3"></circle>
                                    </svg>
                                </div>
                            }
                        </div>
                        <div class="entity-info">
                            <h4 class="entity-name">@album.Name</h4>
                            @if (album.ReleaseYear.HasValue)
                            {
                                <p class="entity-detail">@album.ReleaseYear</p>
                            }
                            <p class="entity-meta">@album.Tracks.Count track@(album.Tracks.Count != 1 ? "s" : "")</p>
                        </div>
                    </a>
                    <div class="entity-actions">
                        <a asp-action="Edit" asp-route-id="@album.Id" class="btn btn-icon" title="Edit">
                            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                <path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"/>
                                <path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z"/>
                            </svg>
                        </a>
                        <form asp-action="Delete" asp-route-id="@album.Id" method="post" class="inline-form" onsubmit="return confirm('Delete this album? Tracks will be unassigned but not deleted.');">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-icon btn-danger" title="Delete">
                                <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                    <polyline points="3 6 5 6 21 6"/>
                                    <path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"/>
                                </svg>
                            </button>
                        </form>
                    </div>
                </div>
            }
        </div>
    }
</div>
