@model Phono.ViewModels.EditTrackViewModel

@{
    ViewData["Title"] = "Edit Track";
}

<div class="edit-page">
    <div class="edit-header">
        <a asp-action="List" class="back-link">
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="M19 12H5M12 19l-7-7 7-7"/>
            </svg>
            Back to Tracks
        </a>
        <h1 class="edit-title">Edit Track Metadata</h1>
        <p class="edit-subtitle">Update the metadata for <span class="filename">@Model.FileName</span></p>
    </div>

    <div class="edit-content">
        <div class="edit-form-container">
            <form asp-action="Edit" method="post" enctype="multipart/form-data">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="FileName" />

                <div class="form-grid">
                    <div class="form-section artwork-section">
                        <h3 class="section-title">Album Artwork</h3>
                        <div class="artwork-preview-container">
                            @if (!string.IsNullOrEmpty(Model.CurrentAlbumArtBase64))
                            {
                                <img src="@Model.CurrentAlbumArtBase64" alt="Current album art" class="artwork-preview" id="artworkPreview" />
                            }
                            else
                            {
                                <div class="artwork-placeholder-large" id="artworkPreview">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="64" height="64" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1" stroke-linecap="round" stroke-linejoin="round">
                                        <circle cx="12" cy="12" r="10"></circle>
                                        <circle cx="12" cy="12" r="3"></circle>
                                    </svg>
                                    <span>No artwork</span>
                                </div>
                            }
                        </div>
                        <div class="artwork-actions">
                            <label class="file-upload-btn">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                    <path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"/>
                                    <polyline points="17 8 12 3 7 8"/>
                                    <line x1="12" y1="3" x2="12" y2="15"/>
                                </svg>
                                Upload New
                                <input type="file" asp-for="AlbumArtFile" accept="image/*" class="hidden-input" onchange="previewImage(this)" />
                            </label>
                            @if (!string.IsNullOrEmpty(Model.CurrentAlbumArtBase64))
                            {
                                <label class="remove-art-label">
                                    <input type="checkbox" asp-for="RemoveAlbumArt" />
                                    Remove artwork
                                </label>
                            }
                        </div>
                    </div>

                    <div class="form-section details-section">
                        <h3 class="section-title">Track Details</h3>
                        
                        <div class="form-group">
                            <label asp-for="Title" class="form-label"></label>
                            <input asp-for="Title" class="form-input" placeholder="Enter track title" />
                            <span asp-validation-for="Title" class="validation-error"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="TrackNumber" class="form-label"></label>
                            <input asp-for="TrackNumber" type="number" min="0" class="form-input form-input-small" />
                            <span asp-validation-for="TrackNumber" class="validation-error"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="AlbumId" class="form-label"></label>
                            <select asp-for="AlbumId" asp-items="Model.AlbumOptions" class="form-select">
                                <option value="">-- No Album --</option>
                            </select>
                        </div>

                        <div class="form-group">
                            <label asp-for="NewAlbumName" class="form-label">Or Create New Album</label>
                            <input asp-for="NewAlbumName" class="form-input" placeholder="Enter new album name" />
                            <span class="form-hint">Leave blank to use selected album above</span>
                        </div>

                        @if (Model.ArtistOptions?.Any() == true)
                        {
                            <div class="form-group">
                                <label asp-for="SelectedArtistIds" class="form-label"></label>
                                <select asp-for="SelectedArtistIds" asp-items="Model.ArtistOptions" class="form-select form-select-multiple" multiple>
                                </select>
                                <span class="form-hint">Hold Ctrl/Cmd to select multiple</span>
                            </div>
                        }

                        <div class="form-group">
                            <label asp-for="NewArtistNames" class="form-label">Or Add New Artists</label>
                            <input asp-for="NewArtistNames" class="form-input" placeholder="Artist 1, Artist 2, ..." list="artistSuggestions" id="newArtistNamesInput" />
                            <datalist id="artistSuggestions">
                                @foreach (var suggestion in Model.ArtistSuggestions)
                                {
                                    <option value="@suggestion"></option>
                                }
                            </datalist>
                            <div id="artistTagsPreview" class="tag-preview" aria-live="polite" hidden>
                                <span>New artists:</span>
                                <div class="tag-list"></div>
                            </div>
                            <span class="form-hint">Comma-separated names (they will be created when you save)</span>
                        </div>
                    </div>
                </div>

                <div class="form-actions">
                    <a asp-action="List" class="btn btn-secondary">Cancel</a>
                    <button type="submit" class="btn btn-primary">
                        <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <path d="M19 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h11l5 5v11a2 2 0 0 1-2 2z"/>
                            <polyline points="17 21 17 13 7 13 7 21"/>
                            <polyline points="7 3 7 8 15 8"/>
                        </svg>
                        Save Changes
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        function previewImage(input) {
            const preview = document.getElementById('artworkPreview');
            if (input.files && input.files[0]) {
                const reader = new FileReader();
                reader.onload = function(e) {
                    if (preview.tagName === 'IMG') {
                        preview.src = e.target.result;
                    } else {
                        const img = document.createElement('img');
                        img.src = e.target.result;
                        img.className = 'artwork-preview';
                        img.id = 'artworkPreview';
                        preview.parentNode.replaceChild(img, preview);
                    }
                };
                reader.readAsDataURL(input.files[0]);
            }
        }

    function updateArtistTags(input) {
        const preview = document.getElementById('artistTagsPreview');
        const tagList = preview.querySelector('.tag-list');
        const value = input.value ?? '';
        const parts = value.split(',').map(p => p.trim()).filter(Boolean);
        tagList.innerHTML = '';

        if (parts.length === 0) {
            preview.hidden = true;
            return;
        }

        preview.hidden = false;
        parts.forEach(text => {
            const chip = document.createElement('span');
            chip.className = 'tag-chip';
            chip.textContent = text;
            tagList.appendChild(chip);
        });
    }

    document.addEventListener('DOMContentLoaded', () => {
        const artistInput = document.getElementById('newArtistNamesInput');
        if (artistInput) {
            artistInput.addEventListener('input', () => updateArtistTags(artistInput));
            updateArtistTags(artistInput);
        }
    });
    </script>
}
