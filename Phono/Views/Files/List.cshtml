@model Phono.ViewModels.TrackListViewModel

@{
    ViewData["Title"] = "Track Library";
}

<div class="library-page track-list-container">
    <div class="library-header">
        <div class="header-content">
            <h1 class="library-title">
                <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <path d="M9 18V5l12-2v13"/>
                    <circle cx="6" cy="18" r="3"/>
                    <circle cx="18" cy="16" r="3"/>
                </svg>
                Track Library
            </h1>
            <span class="track-count">@Model.Tracks.Count track@(Model.Tracks.Count != 1 ? "s" : "")</span>
        </div>
        <form asp-action="Sync" method="post" class="inline-form">
            @Html.AntiForgeryToken()
            <button type="submit" class="btn btn-secondary" title="Sync files from disk">
                <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <polyline points="23 4 23 10 17 10"/>
                    <polyline points="1 20 1 14 7 14"/>
                    <path d="M3.51 9a9 9 0 0 1 14.85-3.36L23 10M1 14l4.64 4.36A9 9 0 0 0 20.49 15"/>
                </svg>
                Sync
            </button>
        </form>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">
            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <polyline points="20 6 9 17 4 12"/>
            </svg>
            @TempData["SuccessMessage"]
        </div>
    }

    <div class="filter-section">
        <form method="get" class="filter-form">
            <div class="filter-group">
                <div class="search-input-container">
                    <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="search-icon">
                        <circle cx="11" cy="11" r="8"/>
                        <line x1="21" y1="21" x2="16.65" y2="16.65"/>
                    </svg>
                    <input type="text" name="q" value="@Model.SearchQuery" placeholder="Search tracks..." class="search-input" />
                </div>
            </div>
            
            <div class="filter-group">
                <select name="album" class="filter-select">
                    <option value="">All Albums</option>
                    @foreach (var album in Model.AlbumOptions ?? Enumerable.Empty<Microsoft.AspNetCore.Mvc.Rendering.SelectListItem>())
                    {
                        <option value="@album.Value" selected="@(Model.FilterAlbumId?.ToString() == album.Value)">@album.Text</option>
                    }
                </select>
            </div>
            
            <div class="filter-group">
                <select name="artist" class="filter-select">
                    <option value="">All Artists</option>
                    @foreach (var artist in Model.ArtistOptions ?? Enumerable.Empty<Microsoft.AspNetCore.Mvc.Rendering.SelectListItem>())
                    {
                        <option value="@artist.Value" selected="@(Model.FilterArtistId?.ToString() == artist.Value)">@artist.Text</option>
                    }
                </select>
            </div>
            
            <div class="filter-group">
                <select name="sort" class="filter-select">
                    @foreach (var sortOption in Phono.ViewModels.TrackListViewModel.SortOptions)
                    {
                        <option value="@sortOption.Key" selected="@(Model.SortBy == sortOption.Key)">@sortOption.Value</option>
                    }
                </select>
            </div>
            
            <button type="submit" class="btn btn-primary">
                <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <polygon points="22 3 2 3 10 12.46 10 19 14 21 14 12.46 22 3"/>
                </svg>
                Filter
            </button>
            
            @if (!string.IsNullOrEmpty(Model.SearchQuery) || Model.FilterAlbumId.HasValue || Model.FilterArtistId.HasValue)
            {
                <a asp-action="List" class="btn btn-secondary">Clear</a>
            }
        </form>
    </div>

    @if (!Model.Tracks.Any())
    {
        <div class="empty-state">
            <div class="empty-icon">
                <svg xmlns="http://www.w3.org/2000/svg" width="80" height="80" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1" stroke-linecap="round" stroke-linejoin="round">
                    <path d="M9 18V5l12-2v13"/>
                    <circle cx="6" cy="18" r="3"/>
                    <circle cx="18" cy="16" r="3"/>
                </svg>
            </div>
            <h3 class="empty-title">No tracks found</h3>
            <p class="empty-subtitle">
                @if (!string.IsNullOrEmpty(Model.SearchQuery) || Model.FilterAlbumId.HasValue || Model.FilterArtistId.HasValue)
                {
                    <text>Try adjusting your filters or </text><a asp-action="List">clear all filters</a>
                }
                else
                {
                    <text>Upload your first audio file to get started</text>
                }
            </p>
        </div>
    }
    else
    {
        <div class="track-list" id="trackList">
            <div class="track-list-header">
                <span>#</span>
                <span></span>
                <span>Title</span>
                <span>Album</span>
                <span>Artist</span>
                <span></span>
            </div>
            @{ var trackIndex = 0; }
            @foreach (var track in Model.Tracks)
            {
                trackIndex++;
                var artistNames = track.TrackArtists.Any() 
                    ? string.Join(", ", track.TrackArtists.Select(ta => ta.Artist?.Name)) 
                    : "Unknown Artist";
                var trackTitle = string.IsNullOrEmpty(track.Title) ? track.FileName : track.Title;
                var albumName = track.Album?.Name ?? "";
                string mimeType = null;
                if (track.FileName.EndsWith(".wav", StringComparison.OrdinalIgnoreCase))
                {
                    mimeType = "audio/wav";
                }
                else if (track.FileName.EndsWith(".mp3", StringComparison.OrdinalIgnoreCase))
                {
                    mimeType = "audio/mpeg";
                }
                
                <div class="track-list-row" 
                     data-track-id="@track.Id"
                     data-track-file="@track.FileName"
                     data-track-title="@trackTitle"
                     data-track-artist="@artistNames"
                     data-track-album="@albumName"
                     data-track-artwork="@(track.AlbumArtBase64 ?? "")"
                     data-track-mime="@(mimeType ?? "")">
                    <div class="track-list-number">
                        <span class="number-text">@trackIndex</span>
                        <svg class="play-icon" xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="currentColor" stroke="none">
                            <polygon points="5 3 19 12 5 21 5 3"/>
                        </svg>
                    </div>
                    <div class="track-list-artwork">
                        @if (!string.IsNullOrEmpty(track.AlbumArtBase64))
                        {
                            <img src="@track.AlbumArtBase64" alt="@trackTitle" />
                        }
                        else
                        {
                            <div class="track-list-artwork-placeholder">
                                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                                    <circle cx="12" cy="12" r="10"></circle>
                                    <circle cx="12" cy="12" r="3"></circle>
                                </svg>
                            </div>
                        }
                    </div>
                    <div class="track-list-info">
                        <div class="track-list-title">@trackTitle</div>
                        <div class="track-list-artist @(track.TrackArtists.Any() ? "" : "track-list-artist-unknown")">@artistNames</div>
                    </div>
                    <div class="track-list-album">@albumName</div>
                    <div class="track-list-artist @(track.TrackArtists.Any() ? "" : "track-list-artist-unknown")">@artistNames</div>
                    <div class="track-list-actions" onclick="event.stopPropagation();">
                        <a asp-action="Edit" asp-route-id="@track.Id" class="track-list-btn" title="Edit">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                <path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"/>
                                <path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z"/>
                            </svg>
                        </a>
                        <form asp-action="Delete" asp-route-id="@track.Id" method="post" class="inline-form" onsubmit="event.stopPropagation(); return confirm('Delete this track? This will also delete the file.');">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="track-list-btn btn-danger" title="Delete">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                    <polyline points="3 6 5 6 21 6"/>
                                    <path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"/>
                                </svg>
                            </button>
                        </form>
                    </div>
                </div>
            }
        </div>
    }
</div>

<!-- Unified Music Player -->
<div class="unified-player" id="unifiedPlayer">
    <div class="player-track-info">
        <div class="player-artwork" id="playerArtwork">
            <div class="player-artwork-placeholder">
                <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                    <circle cx="12" cy="12" r="10"></circle>
                    <circle cx="12" cy="12" r="3"></circle>
                </svg>
            </div>
        </div>
        <div class="player-details">
            <div class="player-title" id="playerTitle">Select a track</div>
            <div class="player-artist" id="playerArtist">â€”</div>
        </div>
    </div>
    
    <div class="player-main">
        <div class="player-controls">
            <button class="player-btn" id="playerPrev" title="Previous">
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="currentColor" stroke="none">
                    <polygon points="19 20 9 12 19 4 19 20"/>
                    <line x1="5" y1="4" x2="5" y2="20" stroke="currentColor" stroke-width="2"/>
                </svg>
            </button>
            <button class="player-btn player-btn-play" id="playerPlayPause" title="Play">
                <svg class="play-icon" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="currentColor" stroke="none">
                    <polygon points="5 3 19 12 5 21 5 3"/>
                </svg>
                <svg class="pause-icon" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="currentColor" stroke="none" style="display: none;">
                    <rect x="6" y="4" width="4" height="16"/>
                    <rect x="14" y="4" width="4" height="16"/>
                </svg>
            </button>
            <button class="player-btn" id="playerNext" title="Next">
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="currentColor" stroke="none">
                    <polygon points="5 4 15 12 5 20 5 4"/>
                    <line x1="19" y1="4" x2="19" y2="20" stroke="currentColor" stroke-width="2"/>
                </svg>
            </button>
        </div>
        <div class="player-progress">
            <span class="player-time" id="playerCurrentTime">0:00</span>
            <input type="range" class="player-seek" id="playerSeek" min="0" max="100" value="0" />
            <span class="player-time" id="playerTotalTime">0:00</span>
        </div>
    </div>
    
    <div class="player-secondary">
        <div class="player-volume">
            <button class="player-volume-btn" id="playerVolumeBtn" title="Mute">
                <svg class="volume-on" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <polygon points="11 5 6 9 2 9 2 15 6 15 11 19 11 5"/>
                    <path d="M19.07 4.93a10 10 0 0 1 0 14.14M15.54 8.46a5 5 0 0 1 0 7.07"/>
                </svg>
                <svg class="volume-off" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" style="display: none;">
                    <polygon points="11 5 6 9 2 9 2 15 6 15 11 19 11 5"/>
                    <line x1="23" y1="9" x2="17" y2="15"/>
                    <line x1="17" y1="9" x2="23" y2="15"/>
                </svg>
            </button>
            <input type="range" class="player-volume-slider" id="playerVolume" min="0" max="100" value="80" />
        </div>
    </div>
    
    <audio id="audioElement"></audio>
</div>
