@model BrowserFileManger.ViewModels.UploadPageViewModel

@{
    ViewData["Title"] = "Music Library";
}

<div class="hero-section">
    <div class="hero-content">
        <h1 class="hero-title">Your Music Library</h1>
        <p class="hero-subtitle">Upload, organize, and play your favorite tracks</p>
    </div>
</div>

<div class="upload-section">
    <form asp-action="Index" method="post" enctype="multipart/form-data" id="uploadForm">
        <div class="upload-zone" id="uploadZone">
            <div class="upload-icon">
                <svg xmlns="http://www.w3.org/2000/svg" width="64" height="64" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                    <path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"></path>
                    <polyline points="17 8 12 3 7 8"></polyline>
                    <line x1="12" y1="3" x2="12" y2="15"></line>
                </svg>
            </div>
            <h3 class="upload-title">Drop your audio files here</h3>
            <p class="upload-subtitle">or click to browse</p>
            <p class="upload-formats">Supported formats: MP3, WAV</p>
            <input asp-for="FileUpload.File" type="file" id="fileInput" class="file-input" accept=".mp3,.wav" />
        </div>
        <button type="submit" class="upload-btn" id="uploadBtn">
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"></path>
                <polyline points="17 8 12 3 7 8"></polyline>
                <line x1="12" y1="3" x2="12" y2="15"></line>
            </svg>
            Upload Track
        </button>
    </form>

    @if (!ViewData.ModelState.IsValid)
    {
        <div class="error-container">
            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
            {
                <div class="error-message">
                    <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <circle cx="12" cy="12" r="10"></circle>
                        <line x1="12" y1="8" x2="12" y2="12"></line>
                        <line x1="12" y1="16" x2="12.01" y2="16"></line>
                    </svg>
                    @error.ErrorMessage
                </div>
            }
        </div>
    }
</div>

<div class="library-section">
    <div class="library-header">
        <h2 class="library-title">
            <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="M9 18V5l12-2v13"></path>
                <circle cx="6" cy="18" r="3"></circle>
                <circle cx="18" cy="16" r="3"></circle>
            </svg>
            Your Tracks
        </h2>
        <span class="track-count">@Model.Files.Count @(Model.Files.Count == 1 ? "track" : "tracks")</span>
    </div>

    @await Html.PartialAsync("~/Views/Files/_FileListPartial.cshtml", Model.Files)
</div>
