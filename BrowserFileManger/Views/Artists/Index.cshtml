@model List<BrowserFileManger.Models.Artist>

@{
    ViewData["Title"] = "Artists";
}

<div class="entity-page">
    <div class="entity-header">
        <div class="header-content">
            <h1 class="entity-title">
                <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"/>
                    <circle cx="12" cy="7" r="4"/>
                </svg>
                Artists
            </h1>
            <span class="entity-count">@Model.Count artist@(Model.Count != 1 ? "s" : "")</span>
        </div>
        <a asp-action="Create" class="btn btn-primary">
            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <line x1="12" y1="5" x2="12" y2="19"/>
                <line x1="5" y1="12" x2="19" y2="12"/>
            </svg>
            New Artist
        </a>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">
            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <polyline points="20 6 9 17 4 12"/>
            </svg>
            @TempData["SuccessMessage"]
        </div>
    }

    @if (!Model.Any())
    {
        <div class="empty-state">
            <div class="empty-icon">
                <svg xmlns="http://www.w3.org/2000/svg" width="80" height="80" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1" stroke-linecap="round" stroke-linejoin="round">
                    <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"/>
                    <circle cx="12" cy="7" r="4"/>
                </svg>
            </div>
            <h3 class="empty-title">No artists yet</h3>
            <p class="empty-subtitle">Create your first artist to organize your tracks</p>
            <a asp-action="Create" class="btn btn-primary" style="margin-top: var(--space-lg);">Create Artist</a>
        </div>
    }
    else
    {
        <div class="entity-list">
            @foreach (var artist in Model)
            {
                <div class="entity-list-item">
                    <div class="entity-avatar">
                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"/>
                            <circle cx="12" cy="7" r="4"/>
                        </svg>
                    </div>
                    <div class="entity-list-info">
                        <h4 class="entity-name">@artist.Name</h4>
                        @if (!string.IsNullOrEmpty(artist.Bio))
                        {
                            <p class="entity-bio">@(artist.Bio.Length > 100 ? artist.Bio.Substring(0, 100) + "..." : artist.Bio)</p>
                        }
                        <p class="entity-meta">@artist.TrackArtists.Count track@(artist.TrackArtists.Count != 1 ? "s" : "")</p>
                    </div>
                    <div class="entity-actions">
                        <a asp-action="Edit" asp-route-id="@artist.Id" class="btn btn-icon" title="Edit">
                            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                <path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"/>
                                <path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z"/>
                            </svg>
                        </a>
                        <form asp-action="Delete" asp-route-id="@artist.Id" method="post" class="inline-form" onsubmit="return confirm('Delete this artist? Tracks will be unassigned from this artist but not deleted.');">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-icon btn-danger" title="Delete">
                                <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                    <polyline points="3 6 5 6 21 6"/>
                                    <path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"/>
                                </svg>
                            </button>
                        </form>
                    </div>
                </div>
            }
        </div>
    }
</div>
